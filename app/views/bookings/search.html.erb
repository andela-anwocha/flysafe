<%= render partial: "header" %>
  <div class="ui basic modal">
    <i class="close icon"></i>
    <div class="header">
      Cancel Reservation?
    </div>
    <div class="image content">
      <div class="image">
        <i class="warning sign icon"></i>
      </div>
      <div class="description">
        <p>Are you sure you want to cancel your reservation
        </p>
      </div>
    </div>
    <div class="actions">
      <div class="two fluid ui inverted buttons">
        <div class="ui red basic inverted button">
          <i class="remove icon"></i>
          No
        </div>
        <div class="ui green basic inverted button">
          <i class="checkmark icon"></i>
          Yes
        </div>
      </div>
    </div>
  </div>
  <div class="ui modal" id="passengers-modal">
    <div class="header">Passengers</div>
      <div class="content">
        <p>
          <div class="ui list" id="passenger-list">
          </div>
        </p>
      </div>
  </div>
  <div class="ui centered grid">
    <div class="ui container">
       <h1 class="ui horizontal divider header">
        <i class="search icon"></i>
        Search Bookings
      </h1>
      <%= form_tag retrieve_booking_path, method: "post", remote: true do %>
        <div class="ui fluid icon input">
          <%= text_field_tag :reference_number, nil, placeholder: "Search Bookings via reference number..." %>
          <i class="search icon"></i>
        </div><br/>
        <%= submit_tag "Search Bookings", class: "ui teal button" %>
      <% end %>
    </div>
  </div>
  <div class="ui container" id="search-result-container">
  </div>
  
    
<%= render partial: "footer" %>