<div class="ui long modal mform">
  <div class="ui container">
    <%= form_tag url_for(action: "update", controller: "bookings", id: booking.id), method: "put", class: "ui form" do %>
      <h4 class="ui dividing header">Please provide your information</h4>
      <div class="two fields">
        <div class="field">
          <%= label_tag :first_name, "First Name" %>
          <%= text_field_tag :first_name, nil, placeholder: "E.g John", required: true %>
        </div>

        <div class="field">
          <%= label_tag :last_name, "Last Name" %>
          <%= text_field_tag :last_name, nil, placeholder: "E.g Doe", required: true %>
        </div>
      </div>

      <div class="eight wide field">
        <%= label_tag :email, "Email" %>
        <%= text_field_tag :email, nil, placeholder: "E.g johndoe@gmail.com", required: true %>
      </div>

      <div class="four wide field">
        <%= label_tag :gender, "Gender" %>
        <%= select_tag :gender, options_for_select([["Male", 1], ["Female", 2]]), class: "ui fluid dropdown"%>
      </div>

      <div id="passenger-form"></div>
      <div class="ui center aligned grid">
        <%= submit_tag "Submit", class: "ui basic blue button" %>
      </div><br/>
    <% end %>
    <div class="ui center aligned grid">
       <div class="ui buttons">
        <button class="ui basic blue button" onclick="addPassengerForm('adult')">Add Adult Passenger</button>
        <button class="ui basic teal button" onclick="addPassengerForm('child')">Add Child Passenger</button>
        <button class="ui basic red button" onclick="addPassengerForm('infant')">Add Infant Passenger</button>
      </div>
    </div>
  </div>
</div>