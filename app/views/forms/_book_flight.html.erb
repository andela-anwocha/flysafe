<% binding.pry %>
<%= form_tag confirm_book_path, method: "post", class: "ui form", remote: true do %>
  <h4 class="ui dividing header">Please provide your information</h4>
  <div class="two fields">
    <div class="field">
      <%= label_tag :first_name, "First Name" %>
      <%= text_field_tag :first_name, nil, placeholder: "E.g John" %>
    </div>

    <div class="field">
      <%= label_tag :last_name, "Last Name" %>
      <%= text_field_tag :last_name, nil, placeholder: "E.g Doe" %>
    </div>
  </div>

  <div class="eight wide field">
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, nil, placeholder: "E.g johndoe@gmail.com" %>
  </div>

  <div class="four wide field">
    <%= label_tag :gender, "Gender" %>
    <%= select_tag :gender, options_for_select([["Male", 1], ["Female", 2]]), class: "ui fluid dropdown"%>
  </div>
<!-- Adult Passengers Information -->

  <% if $no_of_adults > 0 %>
    <% $no_of_adults.times do |index| %>
      <h4 class="ui dividing header">Adult Passenger <%= index+1 %> Information</h4>
      <div class="two fields">
        <div class="field">
          <%= label_tag :adult_first_name, "First Name" %>
          <%= text_field_tag "adult[][first-name]", nil, placeholder: "E.g John" %>
        </div>

        <div class="field">
          <%= label_tag :adult_last_name, "Last Name" %>
          <%= text_field_tag "adult[][last-name]", nil, placeholder: "E.g Doe" %>
        </div>
      </div>

       <div class="four wide field">
        <%= label_tag :adult_gender, "Gender" %>
        <%= select_tag "adult[][gender]", options_for_select([["Male", 1], ["Female", 2]]), class: "ui fluid dropdown"%>
      </div>
    <% end %>
  <% end %>

<!-- Adult Passengers Information -->

<!-- Child Passengers Information -->
  <% if $no_of_children >0 %>
    <% $no_of_children.times do |index|%>
      <h4 class="ui dividing header">Child Passenger <%= index+1 %> Information</h4>
      <div class="two fields">
        <div class="field">
          <%= label_tag :child_first_name, "First Name" %>
          <%= text_field_tag "child[][first-name]", nil, placeholder: "E.g John" %>
        </div>

        <div class="field">
          <%= label_tag :child_last_name, "Last Name" %>
          <%= text_field_tag  "child[][last-name]", nil, placeholder: "E.g Doe" %>
        </div>
      </div>

      <div class="four wide field">
        <%= label_tag :child_gender, "Gender" %>
        <%= select_tag "child[]['gender']", options_for_select([["Male", 1], ["Female", 2]]), class: "ui fluid dropdown"%>
      </div>
    <% end %>
  <% end %>

<!-- Child Passengers Information -->

<!-- Infant Passengers Information -->
  <% if $no_of_infants > 0 %>
    <% $no_of_infants.times do |index| %>
      <h4 class="ui dividing header">Infant Passenger <%= index+1 %> Information</h4>
      <div class="two fields">
        <div class="field">
          <%= label_tag :infant_first_name, "First Name" %>
          <%= text_field_tag "infant[][first-name]", nil, placeholder: "E.g John" %>
        </div>

        <div class="field">
          <%= label_tag :infant_last_name, "Last Name" %>
          <%= text_field_tag "infant[][last-name]", nil, placeholder: "E.g Doe" %>
        </div>
      </div>

      <div class="four wide field">
        <%= label_tag :infant_gender, "Gender" %>
        <%= select_tag "infant[]['gender']", options_for_select([["Male", 1], ["Female", 2]]), class: "ui fluid dropdown"%>
      </div>
    <% end %>
  <% end %>

<!-- Infant Passengers Information -->

  <%= submit_tag "Submit", class: "ui basic blue button" %>
  
<% end %>