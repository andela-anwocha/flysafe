<%= form_tag session_path, method: "post", class: check_login do %>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= text_field_tag :email, nil, placeholder: "Email address", required: true %>
      </div>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= password_field_tag :password, nil, placeholder: "Password", required: true  %>
      </div>
    </div>
    <%= submit_tag "Login", class: "ui fluid large teal submit button" %>
  </div>

  <div class="ui error message">
   <%= flash[:errors] %>
  </div>

<% end %>
