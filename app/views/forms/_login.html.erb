<%= form_tag "/login", method: "post", class: "ui large form" do %>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= text_field_tag :email, nil, placeholder: "Email address" %>
      </div>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
      </div>
    </div>
    <%= submit_tag "Login", class: "ui fluid large teal submit button" %>
  </div>

  <div class="ui error message"></div>

<% end %>